<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/itemNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Item Name"
        android:textSize="18sp"
        android:padding="8dp"
        android:background="#4B3A68" />

    <EditText
        android:id="@+id/casesToGiveEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Number of Cases to Give"
        android:inputType="number"
        android:padding="8dp" />

    <EditText
        android:id="@+id/itemsPerCaseEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Items Per Case"
        android:inputType="number"
        android:padding="8dp" />

    <EditText
        android:id="@+id/messageEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Message (Optional)"
        android:padding="8dp" />

    <Button
        android:id="@+id/submitResponseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Response"
        android:layout_marginTop="16dp" />
</LinearLayout>
